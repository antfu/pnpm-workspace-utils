{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "customConditions": ["dev"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["eslint.config.ts"]
}
